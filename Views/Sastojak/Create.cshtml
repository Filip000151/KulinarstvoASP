@model KulinarstvoASP.Models.Sastojak
@{
	ViewData["Title"] = "Novi sastojak";
}

<h2 class="text-center mb-4">Dodaj novi sastojak</h2>

<div class="row justify-content-center">
	<div class="container border border-primary p-4 col-7 bg-light">
		<form asp-action="Create" method="post">
			<div class="form-group mt-2">
				<label asp-for="Naziv" class="form-label">Naziv sastojka:</label>
				<input type="text" asp-for="Naziv" class="form-control" placeholder="Unesite naziv sastojka" />
				<span asp-validation-for="Naziv" class="text-danger"></span>
			</div>

			<div class="d-flex justify-content-center mt-3">
				<button type="submit" class="btn btn-primary">Kreiraj</button>
			</div>
		</form>
	</div>
</div>