@model KulinarstvoASP.Models.Sastojak
@{
	ViewData["Title"] = "Izmena sastojka";
}

<h2 class="text-center mb-4">Izmeni sastojak</h2>

<div class="row justify-content-center">
	<div class="container border border-info p-4 col-7 bg-light">
		<form asp-action="Edit" method="post">
			<input type="hidden" asp-for="Id" />
			<div class="form-group mt-2">
				<label asp-for="Naziv" class="form-label">Naziv sastojka:</label>
				<input type="text" asp-for="Naziv" class="form-control" placeholder="Unesite naziv sastojka" />
			</div>

			<div class="d-flex justify-content-center mt-3">
				<button type="submit" class="btn btn-info">Izmeni</button>
			</div>
		</form>
	</div>
</div>