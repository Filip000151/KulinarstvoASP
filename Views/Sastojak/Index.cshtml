@model IEnumerable<KulinarstvoASP.Models.Sastojak>
@{
	ViewData["Title"] = "Lista sastojaka";
}

<h2 class="text-center mb-4">Sastojci</h2>

<div class="d-flex justify-content-center mb-4">
	<a class="btn btn-primary" asp-action="Create">Kreiraj novi sastojak</a>
</div>

<table id="sastojciTabela" class="table table-striped table-bordered table-primary">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Broj recepata</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Naziv</td>
                <td>@s.Recepti.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-info">Detalji</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#sastojciTabela').DataTable({
                "language": {
                    "search": "Pretraga:",
                    "lengthMenu": "Prikaži _MENU_ zapisa",
                    "zeroRecords": "Nema pronađenih rezultata",
                    "info": "Prikazano _START_ do _END_ od _TOTAL_ zapisa",
                    "infoEmpty": "Nema zapisa",
                    "paginate": {
                        "first": "Prva",
                        "last": "Poslednja",
                        "next": "Sledeća",
                        "previous": "Prethodna"
                    }
                }
            });
        });
    </script>
}
