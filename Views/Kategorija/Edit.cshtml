@model KulinarstvoASP.Models.Kategorija
@{
	ViewData["Title"] = "Izmena kategorije";
}

<h2 class="text-center mb-4">Izmeni kategoriju</h2>

<div class="row justify-content-center">
	<div class="container border border-info p-4 col-7 bg-light">
		<form asp-action="Edit" method="post">
			<input type="hidden" asp-for="Id"/>
			<div class="form-group mt-2">
				<label asp-for="Naziv" class="form-label">Naziv kategorije:</label>
				<input type="text" asp-for="Naziv" class="form-control" placeholder="Unesite naziv kategorije"/>
				<span asp-validation-for="Naziv" class="text-danger"></span>
			</div>

			<div class="form-group mt-2">
				<label asp-for="Opis" class="form-label">Opis kategorije:</label>
				<textarea asp-for="Opis" class="form-control" placeholder="Unesite opis kategorije"></textarea>
				<span asp-validation-for="Opis" class="text-danger"></span>
			</div>

			<div class="d-flex justify-content-center mt-3">
				<button type="submit" class="btn btn-info">Izmeni</button>
			</div>
		</form>
	</div>
</div>