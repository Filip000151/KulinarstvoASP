@model IEnumerable<KulinarstvoASP.Models.Kategorija>
@{
	ViewData["Title"] = "Lista kategorija";
}

<h2 class="text-center mb-4">Kategorije</h2>

<div class="d-flex justify-content-center mb-4">
	<a class="btn btn-primary" asp-action="Create">Dodaj novu kategoriju</a>
</div>

<div class="row justify-content-center">
	<div class="list-group col-6">
		@foreach (var c in Model)
		{
			<a asp-action="Details" asp-route-id="@c.Id" class="list-group-item list-group-item-action list-group-item-primary text-center">@c.Naziv</a>
		}
	</div>
</div>
